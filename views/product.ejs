<%- include('partials/header') -%>

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= product.name %></h2>
      <img class="img-fluid" src="<%= product.image%>" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/product/likeProduct/<%= product.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"> <%= product.likes %></button>
        </form>
        <!-- <h3 class="col-3"><%= product.likes %></h3> -->
        <%if(product.user == user.id){ %>
        <form
          action="/product/deleteProduct/<%= product.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= product.notes %></p>
    </div>

    <div class="container">
      <div class="row justify-content-center mt-5">
        <ul class="row list-unstyled">
          <% for(var i=0; i<product.comment.length; i++) {%>
            <li class="col-6 justify-content-between mt-5">
              <p>
                <%= product.comment[i].body %>
              </p>
            </li>
          <% } %>
          </ul>

          <form
          class="col-1"
          action="/product/createComment/<%= product.id %>"          
          method="POST"
        >
					<label for="body">Body</label>
					<input type="text" name="body" id="body" placeholder="add comment here">
          <button class="btn btn-primary" type="submit">Submit</button>
        </form>
      </div>
    </div>  
    
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<br>
<br>

<%- include('partials/footer') -%>
