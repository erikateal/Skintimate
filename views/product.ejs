<%- include('partials/header') -%>

<head>
  <link rel="stylesheet" href="/css/style.css" />

    <!-- Bootstrap CSS file -->
    <!-- <link rel="stylesheet" href="/css/bootstrap.min.css"> -->
</head>

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= product.name %></h2>
      <img class="img-fluid" src="<%= product.image%>" />

      <div class="row justify-content-center">
        <p><%= product.note %></p>
        <p><%= product.createdAt %></p>
        <p>-<%= product.user %></p>

        <form
          class="col-1"
          action="/product/likeProduct/<%= product.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-warning fa fa-heart" type="submit"> <%= product.likes %></button>
        </form>
        <!-- <h3 class="col-3"><%= product.likes %></h3> -->
        <%if(product.user == user.id){ %>
        <form
          action="/product/deleteProduct/<%= product.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-warning fa fa-trash" type="submit"></button>
        </form>
        <%}%>

        <div class="row justify-content-center mt-5">
          <ul class="row list-unstyled">
            <% for(var i=0; i<product.comment.length; i++) {%>
              <li class="col-6 justify-content-between mt-5">
                <p>
                  <%= product.comment[i].body %>
                </p>
              </li>
            <% } %>
            </ul>
            <form action="/product/createComment/<%= product.id %>" method="POST">
              <div class="container text-center">
                <div class="row align-items-start">
                  <div class="col">
                    <label for="body">Leave a Comment</label>
                  </div>
                  <div class="col">
                    <input type="text" name="body" id="body" placeholder="add comment here">
                  </div>
                  <div class="col">
                    <button class="btn btn-warning" type="submit">Submit</button>
                  </div>
                </div>
              </div>
          </form>
        </div>
    
        
        <div class="col-6 mt-5">
          <a class="btn btn-warning" href="/dashboard">Return to Dashboard</a>
        </div>
        <div class="col-6 mt-5">
          <a class="btn btn-warning" href="/feed">Return to Feed</a>
        </div>
      </div>
      
    </div>

  </div>
</div>

<br>
<br>

<%- include('partials/footer') -%>
